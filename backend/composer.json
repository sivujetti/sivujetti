{
    "name": "sivujetti/sivujetti",
    "description": "Sivujetti is simply the most radical CMS ever created.",
    "type": "project",
    "require": {
        "php": "^8.0.0",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-fileinfo": "*",
        "ut4/pike": "0.10.0",
        "phpmailer/phpmailer": "~6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.10"
    },
    "suggest": {
        "ext-pdo_sqlite": "To use sqlite",
        "ext-pdo_mysql": "To use mysql"
    },
    "autoload": {
        "psr-4": {"Sivujetti\\": "sivujetti/src/"}
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" --bootstrap ./sivujetti/tests/bootstrap.php",
        "lint": "\"./vendor/bin/psalm\""
    }
}
